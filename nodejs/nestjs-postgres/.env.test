# Test Environment Configuration
NODE_ENV=test
APP_PORT=3001
APP_VERSION=1.0.0

# PostgreSQL Configuration (localhost for tests, port 5433 to avoid local PG conflict)
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/nestjs_test

# Redis Configuration (localhost for tests)
REDIS_URL=redis://localhost:6379

# Authentication (JWT)
JWT_SECRET=test-secret-key-for-e2e-tests
JWT_EXPIRES_IN=1h

# CORS Configuration
CORS_ORIGIN=*

# Rate Limiting (relaxed for tests)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=10000

# OpenTelemetry Configuration (disabled for tests)
OTEL_SERVICE_NAME=nestjs-test
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
