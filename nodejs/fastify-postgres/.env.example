# Application
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=debug

# JWT Authentication
JWT_SECRET=your-secret-key-change-in-production-must-be-32-chars
JWT_EXPIRES_IN=7d

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/fastify_app

# Redis
REDIS_URL=redis://localhost:6379

# OpenTelemetry
OTEL_SERVICE_NAME=fastify-postgres-app
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318

# Scout APM (for production)
SCOUT_ENDPOINT=https://your-scout-endpoint
SCOUT_CLIENT_ID=your-client-id
SCOUT_CLIENT_SECRET=your-client-secret
SCOUT_TOKEN_URL=https://your-token-url
SCOUT_ENVIRONMENT=development

# CORS (comma-separated origins for production)
ALLOWED_ORIGINS=https://yourdomain.com
