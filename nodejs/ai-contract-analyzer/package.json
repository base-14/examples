{
  "name": "ai-contract-analyzer",
  "version": "1.0.0",
  "description": "AI-powered contract analysis pipeline with OpenTelemetry observability",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "typecheck": "tsc --noEmit",
    "lint": "bunx biome check src tests",
    "format": "bunx biome format --write src tests",
    "check": "bun run lint && bun run typecheck && bun run test",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:api": "bash scripts/test-api.sh",
    "db:migrate": "bun run scripts/db-migrate.ts",
    "seed": "bun run scripts/seed-data.ts",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down -v"
  },
  "dependencies": {
    "hono": "^4.12.0",
    "ai": "^6.0.95",
    "@ai-sdk/anthropic": "^3.0.46",
    "@ai-sdk/openai": "^3.0.30",
    "pg": "^8.18.0",
    "pgvector": "^0.2.1",
    "zod": "^4.3.6",
    "pdf-parse": "^2.4.5",
    "@traceloop/node-server-sdk": "^0.22.7",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/sdk-node": "^0.212.0",
    "@opentelemetry/sdk-metrics": "^2.5.1",
    "@opentelemetry/exporter-trace-otlp-http": "^0.212.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.212.0",
    "@opentelemetry/instrumentation-http": "^0.212.0",
    "@opentelemetry/instrumentation": "^0.212.0",
    "@opentelemetry/instrumentation-pg": "^0.64.0",
    "@opentelemetry/semantic-conventions": "^1.39.0"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "@types/pg": "^8.16.0",
    "vitest": "^4.0.18",
    "@biomejs/biome": "^2.4.3",
    "bun-types": "latest"
  }
}
