{
  "name": "nextjs-api-mongodb",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "worker": "tsx --import ./src/jobs/instrumentation.ts src/jobs/worker.ts",
    "build:worker": "esbuild src/jobs/instrumentation.ts src/jobs/worker.ts --bundle --platform=node --target=node24 --format=esm --outdir=dist --external:bullmq --external:ioredis --external:pino --external:@opentelemetry/*",
    "test": "vitest",
    "test:api": "./scripts/test-api.sh",
    "build-lint": "next build && npm run lint"
  },
  "dependencies": {
    "next": "16.1.3",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "mongoose": "9.1.4",
    "bcrypt": "6.0.0",
    "jsonwebtoken": "9.0.3",
    "zod": "4.3.5",
    "bullmq": "5.66.5",
    "ioredis": "5.9.2",
    "pino": "10.2.0",
    "@opentelemetry/api": "1.9.0",
    "@opentelemetry/sdk-node": "0.210.0",
    "@opentelemetry/auto-instrumentations-node": "0.68.0",
    "@opentelemetry/exporter-trace-otlp-http": "0.210.0",
    "@opentelemetry/exporter-metrics-otlp-http": "0.210.0",
    "@opentelemetry/resources": "2.4.0",
    "@opentelemetry/semantic-conventions": "1.39.0",
    "@opentelemetry/sdk-metrics": "2.4.0",
    "@opentelemetry/exporter-prometheus": "0.210.0"
  },
  "devDependencies": {
    "typescript": "5.9.3",
    "@types/node": "25.0.9",
    "@types/react": "19.2.8",
    "@types/react-dom": "19.2.3",
    "@types/bcrypt": "6.0.0",
    "@types/jsonwebtoken": "9.0.10",
    "eslint": "9.39.2",
    "@eslint/eslintrc": "3.3.3",
    "eslint-config-next": "16.1.3",
    "tsx": "4.21.0",
    "esbuild": "0.27.2",
    "vitest": "4.0.17"
  }
}
