# Local Docker Development Configuration
FLASK_APP=wsgi:app
FLASK_ENV=development
DEBUG=true
SECRET_KEY=local-dev-secret-key-not-for-production

# Database (Docker service name)
DATABASE_URL=postgresql+psycopg://postgres:postgres@postgres:5432/flask_app

# Redis (Docker service name)
REDIS_URL=redis://redis:6379/0

# OpenTelemetry (Docker service name)
OTEL_SERVICE_NAME=flask-postgres-app
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4318
