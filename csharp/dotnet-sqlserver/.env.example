# SQL Server (used by compose.yml)
# Default: Azure SQL Edge (works on ARM64 Mac, Windows, Linux)
# For Windows/Linux x64, you can use SQL Server 2025:
#   SQL_IMAGE=mcr.microsoft.com/mssql/server:2025-latest
SQL_IMAGE=mcr.microsoft.com/azure-sql-edge:latest
MSSQL_SA_PASSWORD=YourStrong@Passw0rd

# JWT Secret (minimum 32 characters)
JWT_SECRET=your-production-jwt-secret-minimum-32-characters

# Application Configuration (for local development outside Docker)
ASPNETCORE_ENVIRONMENT=Development
ConnectionStrings__DefaultConnection=Server=localhost;Database=DotnetApi;User Id=sa;Password=YourStrong@Passw0rd;TrustServerCertificate=true
Jwt__Secret=dev-only-secret-key-minimum-32-characters-long
Jwt__Issuer=dotnet-sqlserver
Jwt__Audience=dotnet-sqlserver-api
Jwt__ExpirationHours=24
AllowedOrigins__0=*

# OpenTelemetry
OTEL_SERVICE_NAME=dotnet-sqlserver
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Scout Integration (Optional)
SCOUT_ENDPOINT=https://your-tenant.base14.io/v1/traces
SCOUT_CLIENT_ID=your-client-id
SCOUT_CLIENT_SECRET=your-client-secret
SCOUT_TOKEN_URL=https://your-tenant.base14.io/oauth/token
SCOUT_ENVIRONMENT=development
